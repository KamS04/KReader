<BLabel>:
    canvas.before:
        Color:
            rgba: self.background_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.background_radius

<WrappingLabel>:
    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.size[0] - self.margin, None